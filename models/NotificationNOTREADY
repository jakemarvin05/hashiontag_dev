module.exports = function(sequelize, DataTypes) {

    var Notification = sequelize.define('Notification',
        {
            //camelCase
            notificationId: {
                type: DataTypes.INTEGER,
                primaryKey: true,
                allowNull: false,
                autoIncrement: true
            },
            type: {
                type: DataTypes.STRING,
                allowNull: false,
            },
        }, {
            timestamps: true,
            tableName: 'Notifications', //PascalCase
            classMethods: {

                
                associate: function(models) {
                    Notification.belongsTo(models.User, {foreignKey: 'User_userId'});
                    Notification.belongsTo(models.Post, {foreignKey: 'Post_userId'});
                }



            }
        }
    );
 
return Notification;
};
