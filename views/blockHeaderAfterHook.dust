<script>
$(function() {
    var $nW = $('.navWrapper'),
        $oB = $('#opacBar'),
        oH = $nW.height();
        tH = 100,
        h = 50;
    $(window).scroll(function (e) {
        var scroll = $(window).scrollTop();
        if(scroll > tH) {
            $nW.css('height', h + 'px');
            $oB.css('height', h + 'px').css('opacity','0.8');
        } else {
            $nW.css('height', oH + 'px');
            $oB.css('height', oH + 'px').css('opacity','1');
        }
    });
});

</script>

